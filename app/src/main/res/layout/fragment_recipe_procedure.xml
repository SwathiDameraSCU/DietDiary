<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/recpName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="6dp"
        android:gravity="center"
        android:text="@string/proc"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0066"
        android:textStyle="italic|bold"

        />

    <TextView
        android:id="@+id/ingrInfo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/recpName"
        android:layout_margin="6dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#33CC33"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recpIngrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ingrInfo" />

    <TextView
        android:id="@+id/procInfo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/recpIngrd"
        android:layout_margin="6dp"
        android:gravity="center"
        android:text="@string/proc"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#33CC33"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recpProc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/procInfo" />

</RelativeLayout>
